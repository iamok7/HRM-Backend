    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Login (Admin)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.access) {",
                                    "    pm.collectionVariables.set(\"token\", jsonData.access);",
                                    "    console.log(\"Token set: \" + jsonData.access);",
                                    "} else if (jsonData.data && jsonData.data.access_token) {",
                                    "    pm.collectionVariables.set(\"token\", jsonData.data.access_token);",
                                    "    console.log(\"Token set from data: \" + jsonData.data.access_token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"admin@demo.local\",\n    \"password\": \"4445\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "RGS",
            "item": [
                {
                    "name": "List Reports",
                    "request": {
                        "method": "GET",
                        "header": [],
