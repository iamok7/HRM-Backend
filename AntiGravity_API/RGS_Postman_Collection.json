                },
                {
                    "name": "Run Report (Attendance)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.success && jsonData.data && jsonData.data.outputs && jsonData.data.outputs.length > 0) {",
                                    "    var outputId = jsonData.data.outputs[0].id;",
                                    "    pm.collectionVariables.set(\"output_id\", outputId);",
                                    "    console.log(\"Output ID set: \" + outputId);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"params\": {\n        \"company_id\": 1,\n        \"month\": 11,\n        \"year\": 2025\n    }\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/rgs/reports/1/run",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "rgs",
                                "reports",
                                "1",
                                "run"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get Run Details",
                    "request": {
                        "method": "GET",
                        "header": [],
