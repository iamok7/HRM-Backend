                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/rgs/outputs/{{output_id}}/download",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "rgs",
                                "outputs",
                                "{{output_id}}",
                                "download"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
