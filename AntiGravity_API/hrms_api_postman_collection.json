{
    "info": {
        "_postman_id": "b3a8c8f0-1234-5678-9abc-def012345678",
        "name": "HRMS API Payroll RGS",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:5001",
            "type": "string"
        },
        {
            "key": "jwt_token",
            "value": "",
            "type": "string"
        },
        {
            "key": "report_id",
            "value": "2",
            "type": "string",
            "description": "ID of the report (Default: 2 for PAYROLL_REGISTER)"
        }
    ],
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.success && jsonData.access) {",
                                    "    pm.collectionVariables.set(\"jwt_token\", jsonData.access);",
                                    "    console.log(\"Token set successfully\");",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"admin@hrms.local\",\n    \"password\": \"password\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v1/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "auth",
                                "login"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "RGS",
            "item": [
                {
                    "name": "List Reports",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{jwt_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/v1/rgs/reports",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "rgs",
                                "reports"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get Report Details",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{jwt_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/v1/rgs/reports/:report_id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "rgs",
                                "reports",
                                ":report_id"
                            ],
                            "variable": [
                                {
                                    "key": "report_id",
                                    "value": "{{report_id}}",
                                    "description": "ID of the report"
                                }
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Run Report (Payroll Register)",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{jwt_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"params\": {\n        \"company_id\": 13,\n        \"year\": 2025,\n        \"month\": 11\n    }\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v1/rgs/reports/:report_id/run",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "rgs",
                                "reports",
                                ":report_id",
                                "run"
                            ],
                            "variable": [
                                {
                                    "key": "report_id",
                                    "value": "{{report_id}}",
                                    "description": "ID of the report"
                                }
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get Run Status",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{jwt_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/v1/rgs/runs/:run_id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "rgs",
                                "runs",
                                ":run_id"
                            ],
                            "variable": [
                                {
                                    "key": "run_id",
                                    "value": "1",
                                    "description": "ID of the run"
                                }
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Download Output",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{jwt_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/v1/rgs/outputs/:output_id/download",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "rgs",
                                "outputs",
                                ":output_id",
                                "download"
                            ],
                            "variable": [
                                {
                                    "key": "output_id",
                                    "value": "1",
                                    "description": "ID of the output file"
                                }
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ]
}